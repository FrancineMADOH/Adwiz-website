<form method="POST" action="sendemail" id="contact-form" enctype="multipart/form-data">
  <div class="m-3 ">
    <label for="name" class="form-label">Votre Nom</label>
    <input type="text" class="form-control" name="name" id="email" aria-describedby="emailHelper" required>
  </div>
  <div class="m-3 ">
    <label for="email" class="form-label">Votre Email</label>
    <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelper" required>
    <div id="emailHelp" class="form-text">Votre adresse ne sera pas partagee </div>
  </div>
  <div class="m-3">
    <label for="message" class="form-label" >Votre Message</label>
    <textarea name="message" id="message" name="message" class="form-control" required></textarea>
  </div>
  <p class="text-center">
    <button type="submit" value="submit" class="custom-button">Envoyer</button>

  </p>
</form>